    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.mittereflores.brickinstructions.CreatTransportActivity"
        android:id="@+id/CreateTransportLayout"
        android:background="@drawable/background"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/scrollView"
            android:layout_weight="1">


            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp">

                <fragment
                    android:id="@+id/fragment_city1"
                    android:name="com.mittereflores.brickinstructions.FragmentCreatTransport1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    tools:layout="@layout/fragment_creat_transport1" />

                <fragment
                    android:id="@+id/fragment_city"
                    android:name="com.mittereflores.brickinstructions.FragmentCreatTransport2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    tools:layout="@layout/fragment_create_transport2" />


            </LinearLayout>

        </ScrollView>

    </LinearLayout>

