<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mittereflores.brickinstructions.BasicActivity"
    android:id="@+id/BasicSetLayout"
    android:background="@drawable/background"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/scrollView"
        android:layout_weight="1">


        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">

            <fragment
                android:id="@+id/fragment1"
                android:name="com.mittereflores.brickinstructions.FragmentSet1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                tools:layout="@layout/fragmentset1" />

            <fragment
                android:id="@+id/fragment2"
                android:name="com.mittereflores.brickinstructions.FragmentSet2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                tools:layout="@layout/fragmentset2" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>
