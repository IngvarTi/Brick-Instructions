<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mittereflores.brickinstructions.CreatTransportActivity"
    android:id="@+id/CreateTransportLayout"
    android:background="@drawable/backgroundland"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/scrollView"
        android:layout_weight="1">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:paddingTop="10dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <fragment
                android:id="@+id/fragment_city1"
                android:name="com.mittereflores.brickinstructions.FragmentCreatTransport1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:layout="@layout/fragment_creat_transport1"
                android:layout_marginLeft="10dp" />

            <fragment
                android:id="@+id/fragment_city"
                android:name="com.mittereflores.brickinstructions.FragmentCreatTransport2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:layout="@layout/fragment_create_transport2"
                android:layout_marginLeft="10dp" />
        </LinearLayout>



    </ScrollView>

</LinearLayout>
