<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mittereflores.brickinstructions.CityActivity"
    android:id="@+id/CityLayout"
    android:background="@drawable/backgroundland"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/scrollView"
        android:layout_weight="1">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:paddingTop="10dp">

            <fragment
                android:id="@+id/fragment_city1"
                android:name="com.mittereflores.brickinstructions.CityFragment1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:layout="@layout/fragment_city1"
                android:layout_marginLeft="10dp" />

            <fragment
                android:id="@+id/fragment_city"
                android:name="com.mittereflores.brickinstructions.CityFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:layout="@layout/fragment_city"
                android:layout_marginLeft="10dp" />
        </LinearLayout>



    </ScrollView>

</LinearLayout>
